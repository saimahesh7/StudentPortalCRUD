@model StudentPortal.Models.Entities.Student

<div class="card shadow border-o mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Student</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <input type="hidden" asp-for="StudentId" />
            <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <input asp-for="StudentName" readonly class="form-control border-0 shadow" />
                    <label asp-for="StudentName" class="ms-2">Student Name</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Email" readonly class="form-control border-0 shadow" />
                    <label asp-for="Email" class="ms-2">Student Email</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="PhoneNumber" readonly class="form-control border-0 shadow" />
                    <label asp-for="PhoneNumber" class="ms-2">Phone Number</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Subscribed" class="ms-2">Subscribed Or Not</label>
                    <input type="checkbox" readonly asp-for="Subscribed" />
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" asp-controller="Student" asp-action="RemoveStudent" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Student" asp-action="Index" class="btn btn-secondary border form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>